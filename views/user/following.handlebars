<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4 mt-2">
      <img src="{{user.avatar}}" class="card-img" alt="avatar" style="width: 175px;margin-bottom: 5px;">

      <div class="card-body">
        <h5 class="card-title" style="color:#2E8B57;">{{user.name}}</h5>
        <p class="card-text" style="color:rgb(46, 113, 139);">{{user.introduction}}</p>

        <a href="/users/{{user.id}}/tweets">
          <h6 class="tweet" style="color: black;">Tweet {{tweetCount}}</h6>
        </a>
        <a href="/users/{{user.id}}/followings">
          <h6 class="following" style="color: black;">Following {{FollowingCount}}</h6>
        </a>
        <a href="/users/{{user.id}}/followers">
          <h6 class="follower" style="color: black;">Follower 32</h6>
        </a>
        <a href="/users/{{user.id}}/likes">
          <h6 class="like" style="color: black;">Like 32</h6>
        </a>

        <a href="/users/{{user.id}}/edit" class="btn btn-primary mt-2">Edit Profile</a>
      </div>
    </div>

    <div class="col-md-8">
      <h1 class="followingTitle" style="color: #2E8B57;">Following</h1>

      <div class="row">
        <div class="col-6 mt-3">
          <div class="card" style="border: solid 1px gray;">
            <div class="row">
              <div class="col-5 mt-2">
                <img src="{{user.avatar}}" class="card-img ml-2" alt="avatar" style="width: 100px;margin-bottom: 25px;">
              </div>

              <div class="col-7 mt-1">
                <a href="/users/{{user.id}}/tweets">{{user.name}}</a>
                <p>{{user.introduction}}</p>
                {{#if isFollowed }}
                <form action="/users/{{user.id}}/followings?_method=DELETE" method="POST" style="display: contents;">
                  <button type="submit" class="btn btn-danger ml-2 mt-2 mb-2">Unfollow</button>
                </form>
                {{else}}
                <form action="/users/{{user.id}}/followings" method="POST" style="display: contents;">
                  <button type="submit" class="btn btn-primary ml-2 mt-2 mb-2">Follow</button>
                </form>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>